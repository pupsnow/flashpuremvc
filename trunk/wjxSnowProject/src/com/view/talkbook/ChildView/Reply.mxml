<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="absolute" width="400" height="300"
	showCloseButton="true" close="close()" xmlns:business="com.business.*">
	<mx:Script>
		<![CDATA[
			import mx.formatters.DateFormatter;
			import com.model.ContentModel;
			import mx.managers.PopUpManager;
			[Bindable]
			public var model:ContentModel;
			[Bindable]
			public var ip:Number;
			[Bindable]
			public var replyStr:String;
			private function close():void
			{
			 PopUpManager.removePopUp(this);	
			}
			private function reply():void
			{
				var timeformat:DateFormatter=new DateFormatter();
				timeformat.formatString="YYYY-MM-DD";
				var date:Date=new Date();
				model.reply=reply_txt.text;
				model.replydate=timeformat.format(date);
				reply_book.replybook.send();
				close();
				
			}
		]]>
	</mx:Script>
	<business:Service model="{model}" ip="{ip}" id="reply_book"/>
	<mx:TextArea width="100%" height="100%" id="reply_txt" maxChars="255" text="{replyStr}"/>
	<mx:ControlBar  horizontalAlign="center" paddingBottom="0" paddingTop="0">
		<mx:Button label="确定"  click="reply()"/>
		<mx:Button label="取消"  click="close()"/>
	</mx:ControlBar>
</mx:TitleWindow>
